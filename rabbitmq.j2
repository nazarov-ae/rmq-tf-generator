terraform {
  required_version = ">= 0.13"
  required_providers {
    rabbitmq = {
      source = "cyrilgdn/rabbitmq"
    }
  }
}

variable "url" {}
variable "username" {}
variable "password" {}

provider "rabbitmq" {
  endpoint = var.url
  username = var.username
  password = var.password
}

{% for producer, service in produces %}
resource "rabbitmq_exchange" "{{ producer }}" {
  name  = "{{ producer }}"
  vhost = "/"

  settings {
    type        = "fanout"
    durable     = true
    auto_delete = false
  }
}
{% endfor %}

{% for consumer, service in consumes %}
resource "rabbitmq_queue" "{{ service }}_{{ consumer }}" {
  name  = "{{ service }}.{{ consumer }}"
  vhost = "/"

  settings {
    durable     = false
    auto_delete = true
  }
}
{% endfor %}

{% for consumer, service in consumes %}
resource "rabbitmq_queue" "{{ service }}_backfill_{{ consumer }}" {
  name  = "{{ service }}.backfill.{{ consumer }}"
  vhost = "/"

  settings {
    durable     = false
    auto_delete = true
  }
}
{% endfor %}

{% for consumer, service in consumes %}
resource "rabbitmq_binding" "{{ service }}_{{ consumer }}_from_{{ consumer }}" {
  source           = rabbitmq_exchange.{{ consumer }}.name
  vhost            = "/"
  destination      = rabbitmq_queue.{{ service }}_{{ consumer }}.name
  destination_type = "queue"
  routing_key      = ""
}
{% endfor %}
